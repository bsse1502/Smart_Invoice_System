<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.smartinvoicesystem.controller.AdminController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: linear-gradient(to right, #4facfe, #00f2fe);">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-text-fill: white;" text="Welcome, Admin!" />
            <Button fx:id="logoutButton" onAction="#onLogoutButton"
                    style="-fx-background-color: white; -fx-text-fill: #333;" text="Logout" />
        </HBox>
    </top>

    <left>
        <VBox prefWidth="200" spacing="10" style="-fx-background-color: #343a40;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button maxWidth="Infinity" style="-fx-background-color: #495057; -fx-text-fill: white;" text="Dashboard Home" />
            <Button fx:id="employeeButton" onAction="#handleEmployee" maxWidth="Infinity"
                    style="-fx-background-color: #495057; -fx-text-fill: white;" text="Employee" />
            <Button fx:id="invoiceButton" onAction="#handleInvoice" maxWidth="Infinity"
                    style="-fx-background-color: #495057; -fx-text-fill: white;" text="Invoice" />
            <Button fx:id="customerButton" onAction="#handleCustomer" maxWidth="Infinity"
                    style="-fx-background-color: #495057; -fx-text-fill: white;" text="Customer" />
            <Button fx:id="productButton" onAction="#handleOnActionButton" maxWidth="Infinity"
                    style="-fx-background-color: #495057; -fx-text-fill: white;" text="Products" />
            <Button maxWidth="Infinity" style="-fx-background-color: #495057; -fx-text-fill: white;" text="Revenue " />
            <Button maxWidth="Infinity" style="-fx-background-color: #495057; -fx-text-fill: white;" text="Reports" />
            <Button maxWidth="Infinity" style="-fx-background-color: #495057; -fx-text-fill: white;" text="Settings" />
        </VBox>
    </left>

    <!-- Center Dashboard Area -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="25">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <!-- Dashboard Title -->
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0077b6;" text="Admin Dashboard" />

            <!-- Active Users & System Status -->
            <HBox alignment="CENTER" spacing="40">
                <VBox alignment="CENTER" spacing="10"
                      style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-font-size: 16px;" text="Active Users" />
                    <Label fx:id="activeSessionsLabel" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #0d6efd;" text="1" />
                </VBox>

                <VBox alignment="CENTER" spacing="10"
                      style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-font-size: 16px;" text="System Status" />
                    <Label fx:id="systemStatusLabel" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: green;" text="Online" />
                </VBox>
            </HBox>

            <!-- Tables: Top Selling Products and Top Buyers -->
            <HBox spacing="30">
                <!-- Top Selling Products Table -->
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Top Selling Products" />
                    <TableView fx:id="topProductsTable" prefHeight="300" prefWidth="450"
                               style="-fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.3, 0, 4);">
                        <columns>
                            <TableColumn fx:id="productNameColumn" prefWidth="150" text="Product Name" />
                            <TableColumn fx:id="productStockColumn" prefWidth="100" text="Stock" />
                            <TableColumn fx:id="productValueColumn" prefWidth="150" text="Value" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Top Buyers Table -->
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Top Buyers" />
                    <TableView fx:id="topBuyersTable" prefHeight="300" prefWidth="450"
                               style="-fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0.3, 0, 4);">
                        <columns>
                            <TableColumn fx:id="buyerNameColumn" prefWidth="150" text="Name" />
                            <TableColumn fx:id="buyerEmailColumn" prefWidth="150" text="Email" />
                            <TableColumn fx:id="buyerProductsColumn" prefWidth="150" text="Product(s)" />
                        </columns>
                    </TableView>
                </VBox>
            </HBox>

        </VBox>
    </center>
</BorderPane>
